{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es6"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "baseUrl": ".",
      "noImplicitAny": false,
      "paths": {
        "src": ["./src"],
        "assets": ["./assets"],
      },
      "typeRoots": [
        "./node_modules/@types",
        "./custom_typings"
      ],
    },
    "include": ["src"],
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js",
    ]
  }